<%= render 'navbar' %>

<h1>Listing Books</h1>

<div class="container">
  <% @books.each do |book| %>
    <div class="row">
      <div class="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading"><%=book.title %></div>
           <div class="panel-body"><%= link_to(image_tag(book.avatar.url(:medium)),book_path(book)) %></div> 
      </div>
    </div>
  <% end %>
</div>